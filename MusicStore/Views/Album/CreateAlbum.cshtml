
@{
    ViewBag.Title = "CreateAlbum";
}

<h2>CreateAlbum</h2>

<form method="post" action="AddAlbum">
    <input type="text" name="title" placeholder="Insert title" />
    <br />

    <input type="text" name="price" placeholder="Insert price" />
    <br />

    <input type="text" name="releaseDate" placeholder="Insert release date" />
    <br />

    <input type="text" name="genre" placeholder="Insert genre" />
    <br />

    <input type="text" name="artist" placeholder="Insert artist" />
    <br />

    <input type="text" name="albumArtUrl" placeholder="Insert AlbumArtUrl" />
    <br />

    <input type="text" name="songSampleUrl" placeholder="Insert SongSampleUrl" />
    <br />
    <input type="submit" value="Add" />
</form>