@model MusicStore.Models.GenreViewModel

@{
    ViewBag.Title = "DeleteGenre";
}

<h2>DeleteGenre</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.GetSelectedGenre.name</h4>
    <hr />
    <dl class="dl-horizontal"></dl>


    <form method="POST" action="DeleteGenre">
        <div class="form-actions no-color">
            <input type="hidden" value="@Model.GetSelectedGenre.id" name="id" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Return", "Index")
        </div>
    </form>
    }
</div>
